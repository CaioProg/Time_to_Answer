<!doctype html>
<html >
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>TimeToAnswer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'site' %>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/navbar-fixed/">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

  
  </head>
  <body>
    
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
  <div class="container-fluid">
    <%= link_to 'Time to Answer', root_path, class:"navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <%= form_with(url: site_search_path, local: true, method: :get, class:"navbar-form navbar-left") do |form| %>
  <div class="form-group ">
    <%= form.text_field :term, class:"form-control", placeholder:"Digite algo..."%>
        
  </div>
    <button type="submit" class="btn btn-outline-secondary btn-sm  ">Pesquisar</button>
      <% end %>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav ml-auto mb-2 mb-md-0">
      <% unless user_signed_in? %>
        <li class="nav-item">
          <%= link_to new_user_session_path , class:"nav-link" do %>Entrar
          <% end %>    
        </li>
        <li class="nav-item">
          <%= link_to new_user_registration_path, class:"nav-link" do %>Cadastrar-se
          <% end %>    
        </li>
        <% else %>
        <li>
        <li class="nav-item">
          <%= link_to users_backoffice_welcome_index_path, class:"nav-link" do %>Perfil
          <% end %>

        <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete, class:"nav-link" do %>Sair
        <% end %>
        </li>
      </ul>
      </li>
          <% end %>

    </div>
  </div>
</nav>


   <%= yield %>



    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>

    <% if notice %>
        <%= javascript_tag do %> 
            $.bootstrapGrowl('<%= notice %>', {
            type: 'success', // (null, 'info', 'danger', 'success')
            align: 'right', // ('left', 'right', or 'center')
            allow_dismiss: true, // If true then will display a cross to close the popup.
            stackup_spacing: 10 // spacing between consecutively stacked growls.
            });
        <% end %>
    <% end %>

  </body>
</html>
