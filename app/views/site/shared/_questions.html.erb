<main class="container">
  <div class="bg-light p-5 rounded">
    <% unless params[:term] %>
      <h3>Ultimas perguntas cadastradas...</h3>
    <% else %>
      <h3><%= "Resultados para o termo \"#{params[:term]}\"..."%></h3>
    <% end %>
  </div>

<% @questions.each do |question| %>
  <%= form_with url: site_answer_path do |form| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= question.description %></h3>
    </div>
    <div class="panel-body">
      <ul>
        <% question.answers.each do |answer|%>
          <li style="list-style:none;" >
            <div class="radio">
              <label>
                <%= radio_button_tag 'answer_id', answer.id %>
                <%= answer.description %>
              </label>
            </div>
          </li>
        <% end %>
        <li style="list-style:none;"> 
          <%= form.submit "Respoder", class:"btn btn-outline-secondary", id:"submit_#{question.id}" %>
        </li>
      </ul>
    </div>
  </div>
  <% end %>
<% end %> 
<div class="text-center">
  <%= paginate @questions %>
</div>